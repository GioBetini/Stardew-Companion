<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.GrimoireFragment">

    <Button
        android:id="@+id/btnListGrimoire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        android:text="@string/abrirgrimorio"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvGrimoireBody"
        android:layout_width="370dp"
        android:layout_height="465dp"
        android:layout_marginBottom="44dp"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/btnListGrimoire"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvGrimoireTitle"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tvGrimoireTitle"
        android:layout_width="192dp"
        android:layout_height="43dp"
        android:layout_marginTop="40dp"
        android:text="@string/menuCompanion"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>